<p><%= notice %></p>

<p class = "container">
<strong>物件名:</strong>
<%= @property.name %>
</p>

<p class = "container">
<strong>賃料:</strong>
<%= @property.rent %>円
</p>

<p class = "container">
<strong>住所:</strong>
<%= @property.address %>
</p>

<p class = "container">
<strong>築年数:</strong>
<%= @property.age %>年
</p>

<p class = 'border'>
<strong>備考:</strong>
<%= @property.content %>
</p>

<% @tag_number = 1 %>
<% @property.stations.each do |station| %>
  <h3>最寄り駅<%= @tag_number %></h3>
  <% @tag_number += 1 %>

    <p class = "container">
    <strong>路線名:</strong>
    <%= station.line_name %>
    </p>
    <p class = "container">
    <strong>駅名:</strong>
    <%= station.station_name %>
    </p>

    <p class = "container">
    <strong>徒歩分数:</strong>
    <%= station.minutes_on_foot %>分
    </p>


<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path(@property) %>
